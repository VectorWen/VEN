<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/rl_frame_input_output"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/txt_frame_daorudaochu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="Import and export"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_hr"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_frame_input_output"
        android:layout_marginTop="5dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_hr"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/txt_frame_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Setting"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_hr2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="5dp"
        android:background="#dddddd" />

</RelativeLayout>